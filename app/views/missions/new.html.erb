<div class="container padded">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
    <h1>New mission</h1>
      <%= simple_form_for(@mission) do |f| %>
        <%= f.error_notification %>
        <label for="mission[category]">Category</label>
        <%= f.input :category, collection: ["Sport", "Game", "Cultural", "Special Event", "Party", "Work", "Help", "Holidays", "Music", "Other"], as: :radio_buttons, label: false %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :address %>
        <%= f.input :cost %>
        <label for="mission[date]">Date</label>
        <div class='input-group date datetimepicker'>
          <input type='text' class="form-control" name='mission[date]'/>
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
